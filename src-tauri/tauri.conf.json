{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Meetings Timer",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.nikmedoed.timer",
      "icon": [
        "icons/icon32x32.png",
        "icons/icon64x64.png",
        "icons/icon128x128.png",
        "icons/icon128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "transparent": true,
        "x": 0,
        "y": 0,
        "decorations": false,
        "closable": true,
        "fullscreen": false,
        "resizable": false,
        "alwaysOnTop": true,
        "minimizable": true,
        "title": "Meetings timer",
        "fileDropEnabled": true,
        "width": 360,
        "height": 160
      }
    ]
  }
}